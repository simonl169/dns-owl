<!-- index.html -->

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>DNS OWL Status Server</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

<div class="wrapper">
  <div class="table">
     <div class="row header">
      <div class="cell">
       Domain
      </div>
      <div class="cell">
        Current IP Address
      </div>
    </div>
    {% for domain in domain_list %}
    <div class="row">
      <div class="cell" data-title="Domain">
        {{ domain['RECORD_NAME'] }}
      </div>
      <div class="cell" data-title="Age">
        {{ domain['IP'] }}
      </div>
    </div>
    {% endfor %}
  </div>
</div>

</body>

</html>

